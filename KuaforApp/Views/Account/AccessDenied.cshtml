@{
    ViewData["Title"] = "Erişim Reddedildi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        Erişim Reddedildi
                    </h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-lock-fill text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h5 class="card-title text-center mb-4">Bu sayfaya erişim izniniz yok.</h5>
                    <p class="card-text text-center">
                        Bu işlemi gerçekleştirmek için gerekli yetkilere sahip değilsiniz.
                        Lütfen sistem yöneticinizle iletişime geçin veya ana sayfaya dönün.
                    </p>
                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house-fill"></i> Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 