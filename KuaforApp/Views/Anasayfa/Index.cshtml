@{
    ViewData["Title"] = "KuaforApp";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header class="bg-primary text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">KuaforApp</h1>
            <nav>
                <a href="@Url.Action("Index", "Home")" class="btn btn-light">Anasayfa</a>
                <a href="@Url.Action("RandevuAl", "Home")" class="btn btn-light">Randevu Al</a>
            </nav>
        </div>
    </header>

    <main class="container my-5">
        <h2>Hoş Geldiniz</h2>
        <p>KuaforApp'e hoş geldiniz. En iyi hizmet için hemen randevu alın!</p>
    </main>

    <footer class="bg-dark text-white py-3">
        <div class="container text-center">
            <p class="mb-0">© 2024 KuaforApp. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
