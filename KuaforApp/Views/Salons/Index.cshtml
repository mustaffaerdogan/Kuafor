@model IEnumerable<KuaforApp.Models.Salon>

@{
    ViewData["Title"] = "Salonlar";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Salon Ekle
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SalonName)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.OpeningHours)</th>
                    <th>@Html.DisplayNameFor(model => model.ClosingHours)</th>
                    <th>@Html.DisplayNameFor(model => model.WorkingDays)</th>
                    <th>Hizmet Sayısı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.SalonName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                        <td>@item.OpeningHours.ToString(@"hh\:mm")</td>
                        <td>@item.ClosingHours.ToString(@"hh\:mm")</td>
                        <td>@string.Join(", ", item.GetWorkingDaysList())</td>
                        <td>@(item.Services?.Count ?? 0)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.SalonID" class="btn btn-primary btn-sm">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <a asp-action="Details" asp-route-id="@item.SalonID" class="btn btn-info btn-sm">
                                    <i class="bi bi-info-circle"></i> Detaylar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.SalonID" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function (alert) {
                setTimeout(function () {
                    alert.classList.remove('show');
                    setTimeout(() => alert.remove(), 150);
                }, 5000);
            });
        });
    </script>
} 