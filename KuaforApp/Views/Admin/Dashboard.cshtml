@model KuaforApp.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container-fluid py-4">
    <h1 class="mb-4">Admin Paneli</h1>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Toplam Salon</h5>
                    <p class="card-text display-4">@Model.TotalSalons</p>
                    <a asp-controller="Salons" asp-action="Index" class="btn btn-light">Salonları Yönet</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Toplam Hizmet</h5>
                    <p class="card-text display-4">@Model.TotalServices</p>
                    <a asp-controller="Services" asp-action="Index" class="btn btn-light">Hizmetleri Yönet</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Son Eklenen Salonlar -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Son Eklenen Salonlar</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var salon in Model.RecentSalons)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@salon.SalonName</h6>
                                    <small>@salon.CreatedAt.ToString("dd.MM.yyyy")</small>
                                </div>
                                <p class="mb-1">@salon.Location</p>
                                <small>Çalışma Saatleri: @salon.OpeningHours.ToString(@"hh\:mm") - @salon.ClosingHours.ToString(@"hh\:mm")</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Son Eklenen Hizmetler -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Son Eklenen Hizmetler</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var service in Model.RecentServices)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@service.ServiceName</h6>
                                    <small>@service.CreatedAt.ToString("dd.MM.yyyy")</small>
                                </div>
                                <p class="mb-1">@service.Salon?.SalonName</p>
                                <small>Fiyat: @service.Price.ToString("C2") | Süre: @service.Duration dk</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Hızlı İşlemler</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <a asp-controller="Salons" asp-action="Create" class="btn btn-primary btn-lg w-100 mb-3">
                                <i class="bi bi-plus-circle"></i> Yeni Salon Ekle
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-controller="Services" asp-action="Create" class="btn btn-success btn-lg w-100 mb-3">
                                <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 