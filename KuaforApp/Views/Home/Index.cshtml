@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <!-- Hero Section -->
    <div class="row align-items-center py-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Beauty Salon Management System</h1>
            <p class="lead">Streamline your beauty salon operations with our comprehensive management solution.</p>
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="mt-4">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-3">Get Started</a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">Sign In</a>
                </div>
            }
        </div>
        <div class="col-md-6">
            <img src="~/images/salon-hero.jpg" alt="Beauty Salon" class="img-fluid rounded shadow" />
        </div>
    </div>

    <!-- Features Section -->
    <div class="row py-5">
        <h2 class="text-center mb-4">Key Features</h2>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="bi bi-calendar-check text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="card-title text-center">Appointment Management</h5>
                    <p class="card-text">Efficiently manage appointments, reduce no-shows, and optimize your schedule.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="bi bi-people text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="card-title text-center">Customer Management</h5>
                    <p class="card-text">Keep track of customer preferences, history, and maintain strong relationships.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="bi bi-graph-up text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="card-title text-center">Business Analytics</h5>
                    <p class="card-text">Get insights into your business performance with detailed reports and analytics.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <div class="row py-5 bg-light rounded">
        <div class="col-md-8 offset-md-2 text-center">
            <h2 class="mb-4">Why Choose Our System?</h2>
            <p class="lead">Our beauty salon management system is designed to help salon owners and staff manage their business more efficiently. With features like appointment scheduling, customer management, and business analytics, you can focus on what matters most - providing excellent service to your clients.</p>
            
            <div class="row mt-4">
                <div class="col-md-6">
                    <h5><i class="bi bi-check-circle-fill text-success"></i> Easy to Use</h5>
                    <p>Intuitive interface designed for salon professionals</p>
                </div>
                <div class="col-md-6">
                    <h5><i class="bi bi-check-circle-fill text-success"></i> Secure</h5>
                    <p>Your data is protected with industry-standard security</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="row py-5">
            <div class="col-md-8 offset-md-2 text-center">
                <h2 class="mb-4">Ready to Get Started?</h2>
                <p class="lead mb-4">Join thousands of satisfied salon owners who have transformed their business with our system.</p>
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">Create Your Account</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
}
