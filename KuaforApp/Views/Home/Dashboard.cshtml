@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Welcome to Your Dashboard</h1>
            <p class="lead">Manage your salon business efficiently with our comprehensive tools.</p>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Quick Actions -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-calendar-plus me-2"></i>New Appointment
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-plus me-2"></i>Add Customer
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-cash me-2"></i>New Transaction
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Today's Overview -->
        <div class="col-md-8 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Today's Overview</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center">
                                <h3 class="text-primary">0</h3>
                                <p class="text-muted">Appointments Today</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <h3 class="text-success">$0</h3>
                                <p class="text-muted">Today's Revenue</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <h3 class="text-info">0</h3>
                                <p class="text-muted">New Customers</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Appointments -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Recent Appointments</h5>
                </div>
                <div class="card-body">
                    <p class="text-center text-muted">No recent appointments</p>
                </div>
            </div>
        </div>

        <!-- Recent Activities -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Recent Activities</h5>
                </div>
                <div class="card-body">
                    <p class="text-center text-muted">No recent activities</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any dashboard-specific JavaScript here
    </script>
} 