<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>İşletmeler</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1>İşletmeler Listesi</h1>

        <% if (Model != null && Model.Any()) { %>
        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>İşletme Adı</th>
                    <th>Adres</th>
                    <th>Telefon</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <% int index = 1; %>
                <% foreach (var isletme in Model) { %>
                <tr>
                    <td><%= index %></td>
                    <td><%= isletme.IsletmeAdi %></td>
                    <td><%= isletme.Adres %></td>
                    <td><%= isletme.Telefon %></td>
                    <td>
                        <a href="<%= Url.Action(" Detay", "Isletmeler" , new { id=isletme.Id }) %>" class="btn btn-info btn-sm">Detay</a>
                        <a href="<%= Url.Action(" Duzenle", "Isletmeler" , new { id=isletme.Id }) %>" class="btn btn-warning btn-sm">Düzenle</a>
                        <a href="<%= Url.Action(" Sil", "Isletmeler" , new { id=isletme.Id }) %>" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
                <% index++; %>
                <% } %>
            </tbody>
        </table>
        <% } else { %>
        <div class="alert alert-warning mt-4">Hiç işletme bulunamadı.</div>
        <% } %>

        <a href="<%= Url.Action(" Yeni", "Isletmeler" ) %>" class="btn btn-primary mt-3">Yeni İşletme Ekle</a>
    </div>
</body>
</html>
