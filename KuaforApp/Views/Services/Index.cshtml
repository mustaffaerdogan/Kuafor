@model IEnumerable<KuaforApp.Models.Service>

@{
    ViewData["Title"] = ViewBag.SalonName != null ? $"{ViewBag.SalonName} - Hizmetler" : "Tüm Hizmetler";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" asp-route-salonId="@Context.Request.Query["salonId"]" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ServiceName)</th>
                    <th>@Html.DisplayNameFor(model => model.Duration)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Salon.SalonName)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ServiceName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Duration) dk</td>
                        <td>@item.Price.ToString("N2") TL</td>
                        <td>@Html.DisplayFor(modelItem => item.Salon.SalonName)</td>
                        <td>@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.ServiceID" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ServiceID" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-controller="Salons" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Salonlara Dön
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
} 