@{
    ViewData["Title"] = "Erişim Reddedildi";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Erişim Reddedildi
                    </h2>
                </div>
                <div class="card-body text-center">
                    <p class="lead">Bu sayfaya erişim izniniz bulunmamaktadır.</p>
                    <p>Gerekli yetkilere sahip olduğunuzdan emin olun ve tekrar deneyin.</p>
                    <hr />
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                            <i class="bi bi-house-fill"></i> Ana Sayfa
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 